usuarios = {}
def registrar_usuario():
    nome = input("Digite seu nome de usu치rio: ")
    senha = input("Digite sua senha: ")

    if nome in usuarios:
        print("Usu치rio j치 existe!")
    else:
        usuarios[nome] = senha
        print("Usu치rio registrado com sucesso!\n")
def login():
    nome = input("Nome de usu치rio: ")
    senha = input("Senha: ")

    if nome in usuarios and usuarios[nome] == senha:
        print("Login bem-sucedido! 游녪")
        return True
    else:
        print("Usu치rio ou senha incorretos 游땟")
        return # Menu principal
while True:
    print("\n1 - Registrar")
    print("2 - Login")
    print("3 - Sair")
    escolha = input("Escolha uma op칞칚o: ")

    if escolha == "1":
        registrar_usuario()
    elif escolha == "2":
        login()
    elif escolha == "3":
        break
    else:
        print("Op칞칚o inv치lida!")
